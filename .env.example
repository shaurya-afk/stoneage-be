# Google AI / Gemini API key (required for extraction)
API_KEY=your_gemini_api_key

# Database - use separate vars to avoid URL-encoding password with @
DB_HOST=your-db-host.supabase.co
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_NAME=postgres

# Supabase Auth
# Anon key or Service key needed for signup/signin/google endpoints
# JWT Secret needed for verifying tokens on protected extract endpoints
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# SMTP (e.g. Gmail, SendGrid, Outlook)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
# Optional: "From" address (defaults to SMTP_USER)
MAIL_FROM=your_email@gmail.com

# Poppler path (Windows: use forward slashes; only if not on PATH)
# POPPLER_PATH=C:/Program Files/poppler/poppler-25.12.0/Library/bin
